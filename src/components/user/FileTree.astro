---
// From Starlight: https://starlight.astro.build/guides/components/#file-tree
import { processFileTree } from "./utils/rehype-file-tree"

const fileTreeHtml = await Astro.slots.render("default")
const html = processFileTree(fileTreeHtml, "fileTree.directory")
---

<starlight-file-tree set:html={html} class="not-format" data-pagefind-ignore />

<style>
  starlight-file-tree {
    --x-space: 1.5rem;
    --y-space: 0.125rem;
    --y-pad: 0;

    display: block;
    border: 1px solid theme(colors.gray.300);
    padding: 1rem;
    background-color: theme(colors.gray.200);
    font-size: theme(fontSize.xs);
    font-family: theme(fontFamily.mono);
    overflow-x: auto;
    margin: 10px auto;
  }

  html[data-mode="dark"] starlight-file-tree {
    border: 1px solid theme(colors.gray.500);
    background-color: theme(colors.gray.600);
  }

  starlight-file-tree :global(.directory > details) {
    border: 0;
    padding: 0;
    padding-inline-start: var(--x-space);
    background: transparent;
  }

  starlight-file-tree :global(.directory > details > summary) {
    margin-inline-start: calc(-1 * var(--x-space));
    border: 0;
    padding: var(--y-pad) 0.625rem;
    font-weight: normal;
    color: theme(colors.gray.700);
    max-width: 100%;
  }

  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary) {
    color: theme(colors.gray.50);
  }

  starlight-file-tree :global(.directory > details > summary::marker),
  starlight-file-tree
    :global(.directory > details > summary::-webkit-details-marker) {
    color: theme(colors.gray.700);
  }

  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary::marker),
  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary::-webkit-details-marker) {
    color: theme(colors.gray.300);
  }

  starlight-file-tree :global(.directory > details > summary:hover),
  starlight-file-tree :global(.directory > details > summary:hover .tree-icon) {
    cursor: pointer;
    color: theme(colors.accent.200);
    fill: theme(colors.accent.200);
  }

  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary:hover),
  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary:hover .tree-icon) {
    cursor: pointer;
    color: theme(colors.accent.400);
    fill: theme(colors.accent.400);
  }

  starlight-file-tree :global(.directory > details > summary:hover ~ ul) {
    border-color: theme(colors.gray.800);
  }

  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary:hover ~ ul) {
    border-color: theme(colors.gray.400);
  }

  starlight-file-tree
    :global(.directory > details > summary:hover .highlight .tree-icon) {
    fill: theme(colors.gray.300);
  }

  html[data-mode="dark"]
    starlight-file-tree
    :global(.directory > details > summary:hover .highlight .tree-icon) {
    fill: theme(colors.gray.800);
  }

  starlight-file-tree :global(ul) {
    margin-inline-start: 0.5rem;
    border-inline-start: 1px solid theme(colors.gray.800);
    padding: 0;
    padding-inline-start: 0.125rem;
    list-style: none;
  }

  html[data-mode="dark"] starlight-file-tree :global(ul) {
    border-inline-start: 1px solid theme(colors.gray.500);
  }

  starlight-file-tree > :global(ul) {
    margin: 0;
    border: 0;
    padding: 0;
  }

  starlight-file-tree :global(li) {
    margin: var(--y-space) 0;
    padding: var(--y-pad) 0;
  }

  starlight-file-tree :global(.file) {
    margin-inline-start: calc(var(--x-space) - 0.125rem);
    color: theme(colors.gray.700);
  }

  html[data-mode="dark"] starlight-file-tree :global(.file) {
    color: theme(colors.gray.50);
  }

  starlight-file-tree :global(.tree-entry) {
    display: inline-flex;
    align-items: flex-start;
    flex-wrap: wrap;
    max-width: calc(100% - 1rem);
  }

  @media (min-width: 30em) {
    starlight-file-tree :global(.tree-entry) {
      flex-wrap: nowrap;
    }
  }

  starlight-file-tree :global(.tree-entry > :first-child) {
    flex-shrink: 0;
  }

  starlight-file-tree :global(.empty) {
    color: theme(colors.gray.800);
    padding-inline-start: 0.375rem;
  }

  html[data-mode="dark"] starlight-file-tree :global(.empty) {
    color: theme(colors.gray.300);
  }

  starlight-file-tree :global(.comment) {
    color: theme(colors.gray.400);
    padding-inline-start: 1.625rem;
    max-width: 24rem;
    min-width: 12rem;
  }

  html[data-mode="dark"] starlight-file-tree :global(.comment) {
    color: theme(colors.gray.400);
  }

  starlight-file-tree :global(.highlight) {
    display: inline-block;
    border-radius: 0.25rem;
    padding-inline-end: 0.5rem;
    color: theme(colors.gray.50);
    background-color: theme(colors.accent.200);
  }

  html[data-mode="dark"] starlight-file-tree :global(.highlight) {
    color: theme(colors.gray.200);
    background-color: theme(colors.accent.500);
  }

  starlight-file-tree :global(svg) {
    display: inline;
    fill: theme(colors.gray.800);
    vertical-align: middle;
    margin-inline: 0.25rem 0.375rem;
    width: 0.875rem;
    height: 0.875rem;
  }

  starlight-file-tree :global(.highlight svg.tree-icon) {
    fill: theme(colors.gray.50);
  }

  html[data-mode="dark"] starlight-file-tree :global(svg) {
    fill: theme(colors.gray.300);
  }

  html[data-mode="dark"] starlight-file-tree :global(.highlight svg.tree-icon) {
    fill: theme(colors.gray.200);
  }
</style>
