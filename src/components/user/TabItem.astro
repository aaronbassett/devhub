---
// From Starlight: https://starlight.astro.build/guides/components/#tabs
import { TabItemTagname } from "./utils/rehype-tabs"
import type { Icons } from "./utils/icons"

interface Props {
  icon?: keyof typeof Icons
  label: string
}

const { icon, label } = Astro.props

if (!label) {
  throw new Error("Missing prop `label` on `<TabItem>` component.")
}
---

<TabItemTagname data-label={label} data-icon={icon}>
  <slot />
</TabItemTagname>
